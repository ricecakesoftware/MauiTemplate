<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:RiceCakeSoftware.MauiTemplate.Views"
       xmlns:viewmodels="clr-namespace:RiceCakeSoftware.MauiTemplate.ViewModels"
       x:Class="RiceCakeSoftware.MauiTemplate.Views.AppShell"
       x:DataType="viewmodels:AppShellViewModel">
    <TabBar>
        <Tab Title="ログイン">
            <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
        </Tab>
    </TabBar>
    <TabBar>
        <Tab Title="ダッシュボード" Icon="dashboard_black_48dp.svg">
            <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage" />
        </Tab>
        <Tab Title="一覧" Icon="list_black_48dp.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ListPage}" Route="ListPage" />
        </Tab>
    </TabBar>
    <TabBar>
        <Tab Title="詳細">
            <ShellContent ContentTemplate="{DataTemplate views:DetailPage}" Route="DetailPage" />
        </Tab>
    </TabBar>
</Shell>
